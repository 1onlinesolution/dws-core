{
  "name": "@1onlinesolution/dws-core",
  "version": "0.0.12",
  "description": "DWS Core utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "exports": "./dist/index.js",
  "scripts": {
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "lint": "eslint lib/**/*.ts",
    "prebuild": "rm -rf dist && npm run lint",
    "build": "tsc",
    "test": "npm run lint && jest --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1onlinesolution/dws-core.git"
  },
  "author": "1onlinesolution",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/1onlinesolution/dws-core/issues"
  },
  "homepage": "https://github.com/1onlinesolution/dws-core#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/mongodb": "^3.6.18",
    "@types/node": "^15.12.4",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.1",
    "sinon": "^11.1.1",
    "ts-jest": "^27.0.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "colors": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongodb": "^3.6.9",
    "typescript": "^4.3.4",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.7"
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "**/*.d.ts"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "es2021": true,
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "ecmaFeatures": {
        "arrowFunctions": true
      }
    },
    "plugins": [
      "security",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "arrow-body-style": "off",
      "arrow-parens": "off",
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./lib/test/setup.ts"
    ],
    "collectCoverage": false,
    "coverageReporters": [
      "json",
      "text",
      "lcov",
      "clover"
    ]
  }
}
